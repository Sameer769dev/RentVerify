
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Listings can be read by anyone, but only created, updated, or deleted by their authenticated owner.
    match /listings/{listingId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // User profiles can be created by any authenticated user for themselves.
    // Users can only read or update their own profile.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
  }
}
